@page
@model Micho.Web.Pages.Invoices.IndexModel
@{
    ViewData["Title"] = "Tìm kiếm hóa đơn";
}

<h1>Tìm kiếm hóa đơn</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="get" asp-page="/Invoices/View" id="searchForm">
            <div class="form-group">
                <label for="orderId" class="control-label">Nhập mã đơn hàng</label>
                <input name="orderId" id="orderId" class="form-control" type="number" required />
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Chuyển hướng tới URL động
        document.getElementById('searchForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const orderId = document.getElementById('orderId').value;
            if (orderId) {
                window.location.href = '/Invoices/View/' + orderId;
            }
        });
    </script>
}